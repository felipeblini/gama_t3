{{> head }}

<!--Hero-->
<div class="section no-pad-bot" id="index-banner">
    <div>
        <div class="row">
            <div class="col s12 m6 offset-m6">
                <div class="row">
                    <div class="col s12 m10 offset-m1 l8 offset-l2">
                        <form action="/salvalead" method="POST">
                            <div class="card blue-grey darken-1">
                                <div class="card-content white-text">
                                    <span class="title-form"> Cadastre-se </span>
                                    <div class="input-field">
                                        <label for="nome">Nome</label>
                                        <input type="text" name="nome" required id="nome">
                                    </div>
                                    <div class="input-field">
                                        <label for="email">Email</label>
                                        <input type="email" name="email" id="email" class="with-gap">
                                    </div>
                                    <div class="input-field">
                                        <span> Categoria </span>
                                        <p>
                                          <input name="motorista" type="radio" id="motorista" class="with-gap" />
                                          <label for="motorista">Motorista</label>
                                        </p>
                                        <p>
                                          <input name="passageiro" type="radio" id="passageiro" class="with-gap"/>
                                          <label for="passageiro">Passageiro</label>
                                        </p>
                                        <p>
                                            <input name="empresa" type="radio" id="empresa" class="with-gap"/>
                                            <label for="empresa">Empresa</label>
                                        </p>
                                    </div>
                                </div>
                                <div class="card-action">
                                    <button class="btn waves-effect waves-light" type="submit" name="action">
                                        Cadastrar
                                    </button> {{ erro }}
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Intro and service-->
